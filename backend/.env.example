# --- Core ---
NODE_ENV=development
APP_MODE=dev
PORT=5000

# --- Database ---
DB_NAME=github_test_generator
APP_DB_USER=postgres
APP_DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432
DB_DIALECT=postgres
LOCAL_DB_HOST=localhost
# DATABASE_URL=postgres://user:pass@host:port/db

# --- App Secrets ---
JWT_SECRET=your_jwt_secret_here
JWT_SECRETS=your_jwt_secrets_json_here
JWT_REFRESH_TTL=7d
TOKEN_ENCRYPTION_KEY=your_encryption_key_32_chars

# --- External Integrations ---
FRONTEND_URL=http://localhost:8080
GEMINI_API_KEY=your_gemini_api_key
REDIS_URL=redis://localhost:6379

# --- GitHub App (Infrastructure Actions) ---
GITHUB_APP_ID=your_app_id
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_PRIVATE_KEY_PATH=path/to/private-key.pem
# GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# --- GitHub OAuth App (User Auth) ---
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret
GITHUB_REDIRECT_URI=http://localhost:5000/api/v1/auth/github/callback

# --- GitHub Fine-grained PAT (Admin/Fallback) ---
GITHUB_TOKEN=your_personal_access_token_for_testing

# --- Email Services ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Zaxion Protocol <governance@zaxion.ai>"

# Gmail OAuth2 (Enterprise Email) - Optional but Recommended for Production
# See docs/email-setup.md for instructions
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
